@model HOMEOWNER.Models.ViewModels.SubmitRequestViewModel

@{
    ViewData["Title"] = "Manage Service Requests";
}

<style>
    /* Modern Color Palette */
    :root {
        --primary-blue: #4361ee;
        --primary-hover: #3a56d4;
        --secondary-blue: #3f37c9;
        --success-green: #4cc9f0;
        --warning-orange: #f8961e;
        --danger-red: #ef233c;
        --info-teal: #4895ef;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-gray: #212529;
        --text-muted: #6c757d;
        --white: #ffffff;
    }

    /* Typography */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        color: var(--dark-gray);
        line-height: 1.6;
    }

    h2 {
        font-weight: 600;
        color: var(--dark-gray);
        font-size: 1.75rem;
        letter-spacing: -0.5px;
    }

    /* Table Container */
    .service-table-container {
        background: var(--white);
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        margin-top: 2rem;
    }

    /* Table Styling */
    .service-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .service-table thead {
            background: linear-gradient(135deg, var(--primary-blue), var(--secondary-blue));
            color: var(--white);
        }

        .service-table th {
            padding: 1rem 1.25rem;
            font-weight: 500;
            text-align: left;
            vertical-align: middle;
            border-bottom: 2px solid var(--medium-gray);
        }

        .service-table td {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid var(--medium-gray);
            vertical-align: middle;
        }

        .service-table tr:last-child td {
            border-bottom: none;
        }

        /* Table Hover Effects */
        .service-table tbody tr {
            transition: all 0.2s ease;
        }

            .service-table tbody tr:hover {
                background-color: rgba(67, 97, 238, 0.03);
                transform: translateX(4px);
            }

    /* Icons */
    .table-icon {
        margin-right: 8px;
        font-size: 1.1rem;
        width: 20px;
        text-align: center;
    }

    /* Status Badges */
    .status-badge {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 500;
        text-transform: capitalize;
    }

    .status-pending {
        background-color: rgba(248, 150, 30, 0.15);
        color: #c46a00;
    }

    .status-completed {
        background-color: rgba(76, 201, 240, 0.15);
        color: #0a6e7c;
    }

    .status-cancelled {
        background-color: rgba(239, 35, 60, 0.15);
        color: #b51a2a;
    }

    .status-in-progress {
        background-color: rgba(72, 149, 239, 0.15);
        color: #1a5b9e;
    }

    /* Priority Indicators */
    .priority-high {
        color: var(--danger-red);
        font-weight: 500;
    }

    .priority-medium {
        color: var(--warning-orange);
        font-weight: 500;
    }

    .priority-low {
        color: var(--success-green);
        font-weight: 500;
    }

    /* Empty State */
    .empty-state {
        padding: 3rem 1rem;
        text-align: center;
        color: var(--text-muted);
    }

    .empty-state-icon {
        font-size: 2.5rem;
        color: var(--medium-gray);
        margin-bottom: 1rem;
    }

    /* Header */
    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid var(--medium-gray);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .service-table-container {
            border-radius: 0;
        }

        .service-table {
            display: block;
            overflow-x: auto;
        }
    }
</style>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<div class="service-table-container">
    <div class="table-header">
        <h2>
            <i class="fas fa-tools table-icon" style="color: var(--primary-blue);"></i>
            Service Requests
        </h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" style="margin: 0 1.5rem 1.5rem;">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    <table class="service-table">
        <thead>
            <tr>
                <th><i class="fas fa-folder-open table-icon" style="color: var(--info-teal);"></i>Category</th>
                <th><i class="fas fa-bolt table-icon" style="color: var(--warning-orange);"></i>Priority</th>
                <th><i class="fas fa-align-left table-icon" style="color: var(--text-muted);"></i>Description</th>
                <th><i class="fas fa-flag table-icon" style="color: var(--danger-red);"></i>Status</th>
                <th><i class="fas fa-cog table-icon" style="color: var(--primary-blue);"></i>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ServiceRequests != null && Model.ServiceRequests.Any())
            {
                foreach (var request in Model.ServiceRequests)
                {
                    <tr>
                        <td>@(request?.Category ?? "N/A")</td>
                        <td class="@GetPriorityClass(request?.Priority)">
                            @(request?.Priority ?? "N/A")
                        </td>
                        <td>@(request?.Description ?? "N/A")</td>
                        <td>
                            <span class="status-badge @GetStatusClass(request?.Status)">
                                @(request?.Status ?? "N/A")
                            </span>
                        </td>
                        <td>
                            <button class="btn-action" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn-action" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="empty-state">
                        <i class="fas fa-inbox empty-state-icon"></i>
                        <p>No service requests found</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@functions {
    string GetStatusClass(string status)
    {
        if (string.IsNullOrEmpty(status)) return "";

        return status.ToLower() switch
        {
            "pending" => "status-pending",
            "completed" => "status-completed",
            "cancelled" => "status-cancelled",
            "in progress" => "status-in-progress",
            _ => ""
        };
    }

    string GetPriorityClass(string priority)
    {
        if (string.IsNullOrEmpty(priority)) return "";

        return priority.ToLower() switch
        {
            "high" => "priority-high",
            "medium" => "priority-medium",
            "low" => "priority-low",
            _ => ""
        };
    }
}