@model HOMEOWNER.Models.Facility

<form asp-controller="Facility" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Facility Name</label>
        <input type="text" class="form-control" asp-for="FacilityName" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>
    <div class="form-group">
        <label>Capacity</label>
        <input type="number" class="form-control" asp-for="Capacity" required />
    </div>
    <div class="form-group">
        <label>Availability Status</label>
        <select class="form-control" asp-for="AvailabilityStatus">
            <option value="Available">Available</option>
            <option value="Unavailable">Unavailable</option>
        </select>
    </div>
    <div class="form-group">
        <label>Upload Images</label>
        <input type="file" class="form-control" name="ImageFiles" multiple />
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save Facility</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    </div>
</form>



<style>
    form {
        max-width: 500px;
        margin: auto;
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    input, textarea, select {
        margin-top: 5px;
    }

    button {
        display: block;
        width: 100%;
        margin-top: 10px;
        transition: background 0.3s ease-in-out;
    }

        button:hover {
            background: #0056b3;
        }
</style>
